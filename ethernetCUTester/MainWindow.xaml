<Window x:Class="ethernetCUTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ethernetCUTester"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Left">
                <TextBox Name="tbMsg" Width="300" Height="250"/>
                <Button Name="btnProgram" Width="auto" Height="100" Click="btnProgram_Click">Program</Button>
            </StackPanel>
            <StackPanel>
                <StackPanel Height="250">
                    <Label Name="lbQuantity">數量 : </Label>
                    <Label Name="lbMAC">產品序號 : </Label>
                    <Label Name="lbStatus">狀態 : </Label>
                </StackPanel>
                <Button Name="btnPrint" Width="100" Height="100" Click="btnPrint_Click">Print Label</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
